<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CategoryTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabSelectedTextColor">#008B8B</item>
        <item name="tabTextAppearance">@style/CategoryTabTextAppearance</item>
    </style>

    <style name="CategoryTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#A8A19E</item>
    </style>

    <!--fragment_city-->
    <style name="Image">
        <item name="android:layout_width">@dimen/image_width</item>
        <item name="android:layout_height">@dimen/image_height</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Header1">
        <item name="android:paddingLeft">@dimen/padding_small</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/header1_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/header_text</item>
    </style>

    <style name="Subtitle1">
        <item name="android:paddingLeft">@dimen/padding_medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/header2_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/subtitle_text</item>
    </style>

    <style name="Header2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/header2_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/header_text</item>
    </style>

    <style name="text">
        <item name="android:paddingTop">@dimen/padding_little</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/header2_color</item>
        <item name="android:textSize">@dimen/subtitle_text</item>
    </style>

    <!--list_item-->
    <style name="list_image">
        <item name="android:layout_marginTop">@dimen/padding_little</item>
        <item name="android:layout_marginLeft">@dimen/padding_little</item>
        <item name="android:layout_marginBottom">@dimen/padding_little</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_width">@dimen/list_item_height</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
    </style>

    <style name="list_chinese_name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/header1_color</item>
        <item name="android:textSize">@dimen/subtitle_text</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="list_phone">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/header2_color</item>
        <item name="android:textSize">@dimen/subtitle_text</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>
