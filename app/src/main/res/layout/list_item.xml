<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:background="@color/main_background"
    android:minHeight="@dimen/list_item_height">

    <ImageView
        android:id="@+id/image"
        style="@style/list_image" />

    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:layout_marginLeft="@dimen/padding_small"
        android:layout_toRightOf="@id/image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/placeName_text_view"
            style="@style/list_chinese_name"
            android:layout_marginTop="@dimen/padding_little"
            android:textStyle="bold"
            tools:text="PlaceName" />

        <TextView
            android:id="@+id/placeChineseName_text_view"
            style="@style/list_chinese_name"
            tools:text="ChineseName" />

        <TextView
            android:id="@+id/placeAddress_text_view"
            style="@style/list_phone"
            android:layout_marginTop="@dimen/padding_little"
            tools:text="Address" />

        <TextView
            android:id="@+id/placePhone_text_view"
            style="@style/list_phone"
            tools:text="Phone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="@string/more"
            android:textColor="@color/header2_color"
            android:textSize="@dimen/subtitle_text" />

    </LinearLayout>

</RelativeLayout>